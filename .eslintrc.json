{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["warn", 2],
        "semi": ["error", "never"],
        "prefer-const": "warn",
        "no-unused-vars": "warn",
        "no-console": "warn",
        "quotes": ["error", "single"],
        "jsx-quotes": ["error", "prefer-single"],
        "max-len": ["error", {
            "code": 160
        }],
        "react/prop-types": "off"
    }
}
